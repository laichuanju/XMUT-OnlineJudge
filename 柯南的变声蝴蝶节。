#include<stdio.h>

int main()
{
	int n,i=1,x=1,z,y,c;
	scanf("%d",&n);
	if(n>1)
	{
//---------------蝴蝶结的上半部分------------------------------------------------------------------
	do
	{
		for(i=1;i<=x;i++)
		{
			printf("*");
			if(i==x)
			{
				for(y=1;y<=(2*n-1-2*x);y++)
				{
				printf(" ");
				}
				for(c=1;c<=x;c++)
				{
					printf("*");
				}

				printf("\n");
			}
		}
		x++;
	}while(x<n);
//---------------蝴蝶结的上半部分----------------------------------------------------------------------

//*************中间那排*********************
	for(z=1;z<2*n;z++)
	{
		printf("*");
		if(z==(2*n-1))
		{printf("\n");}
	}
//*************中间那排*********************

//---------------蝴蝶结的下半部分---------------------------------
	x=n;
	do
	{
		for(i=1;i<x;i++)
		{
			printf("*");
			if(i==x-1)
			{
				for(y=1;y<=(2*n-2*x+1);y++)
				{
				printf(" ");
				}
				for(i=1;i<x;i++)
				{
					printf("*");
				}
				printf("\n");
			}
		}
		x--;
	}while(x>0);






//---------------蝴蝶结的下半部分---------------------------------
	}
	else
	{
		printf("*\n");//n=1时候的情况
	}
	return 0;
}
